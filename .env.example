# ============================================================================
# Environment Variables Template for Boots & Honey
# Copy this file to .env.local and fill in your actual values
# ============================================================================

# ============================================================================
# Supabase Configuration (Required)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================================================
# Document Generation Services (Phase 2+)
# ============================================================================

# Email Service - Resend (https://resend.com)
RESEND_API_KEY=your_resend_api_key_here
SMTP_FROM_EMAIL=orders@yourdomain.com
SMTP_FROM_NAME="Your Company Name"

# File Storage
SUPABASE_STORAGE_BUCKET=order-documents

# ============================================================================
# Webhook Configuration (Phase 3+)
# ============================================================================

# Webhook security
WEBHOOK_SECRET=your_secure_webhook_secret_here

# Base URL for your application (used for webhooks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# Feature Flags (Gradual Rollout)
# ============================================================================

# Document Generation
ENABLE_DOCUMENT_GENERATION=false
ENABLE_RECEIPT_GENERATION=false
ENABLE_PICK_SLIP_GENERATION=false

# Email Notifications  
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ORDER_CONFIRMATION_EMAIL=false
ENABLE_STATUS_UPDATE_EMAILS=false

# Webhook Processing
ENABLE_WEBHOOK_PROCESSING=false
ENABLE_ORDER_CREATED_WEBHOOK=false
ENABLE_ORDER_UPDATED_WEBHOOK=false

# ============================================================================
# Performance & Monitoring (Phase 6+)
# ============================================================================

# Rate Limiting
WEBHOOK_RATE_LIMIT_PER_MINUTE=60
DOCUMENT_GENERATION_RATE_LIMIT_PER_MINUTE=30

# Retry Configuration
WEBHOOK_MAX_RETRIES=3
EMAIL_MAX_RETRIES=3
DOCUMENT_GENERATION_MAX_RETRIES=2

# Timeouts (in milliseconds)
DOCUMENT_GENERATION_TIMEOUT_MS=30000
EMAIL_SEND_TIMEOUT_MS=10000
WEBHOOK_PROCESSING_TIMEOUT_MS=60000

# ============================================================================
# Development & Testing
# ============================================================================

# Test Mode (when enabled, uses test email addresses and doesn't send real emails)
TEST_MODE=true
TEST_EMAIL_RECIPIENT=test@yourdomain.com

# Debug Logging
DEBUG_WEBHOOK_EVENTS=false
DEBUG_DOCUMENT_GENERATION=false
DEBUG_EMAIL_SENDING=false

# ============================================================================
# Optional Integrations (Future)
# ============================================================================

# Accounting System Integration
# QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
# QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret

